	<!-- Plugins -->
	<gap:plugin name="hu.fwstudio.cordova.plugin.local-notification" version="1.0.7" />
	<gap:plugin name="nl.x-services.plugins.socialsharing" source="plugins.cordova.io" />
	<gap:plugin name="com.adobe.plugins.gaplugin" />
	<gap:plugin name="com.ionic.keyboard" version="1.0.3" />
